<!DOCTYPE html>
<html>
<head>
  <title>Backyardapp</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar vyu-blue" role="navigation">
<div class =  "container-fluid"
  <ul class="nav navbar-nav">
  <li>
    <a class="navbar-brand" id='vyu-logo' href="/welcome"></a>
  </li>

  </ul>
  <ul class="nav navbar-nav navbar-right">
    <% if user_signed_in? %>
      <li class = "navbar-text">Signed in as <%= current_user.email %></li>
      <li class = "navbar-link"><%= link_to "Edit Profile", edit_profile_path(current_user.profile) %></li>
      <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Manage <b class="caret"></b></a>
             <ul class="dropdown-menu" role="menu">
             <li class="navbar-link"><%= link_to "Add Tool", new_tool_path %></li>
              <!-- <li><#%= link_to "Review by/ Manage Urls", newsurls_path %></li>
              <li><#%= link_to "Review all Content", newsarticles_path %></li> -->
             </ul>
        </li>
      <li class="navbar-link"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
    <% else %>
      <li class="navbar-link"><%= link_to "Login", new_user_session_path %></li>
    <% end %>
  </ul>
  </div>
  </nav>

<%= yield %>

</body>
</html>
